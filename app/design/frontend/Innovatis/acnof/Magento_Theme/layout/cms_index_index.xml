<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="content">
            <block class="Mageplaza\Productslider\Block\CategoryId" name="home.slider.destaque" template="productslider.phtml">
                <arguments>
                    <argument name="loop" xsi:type="string">1</argument>
                    <argument name="category_id" xsi:type="string">9</argument>
                    <argument name="products_count" xsi:type="string">8</argument>
                    <argument name="heading" xsi:type="string">Category Id</argument>
                    <argument name="description" xsi:type="string">Produtos em destaque</argument>
                </arguments>
            </block>

            <block class="Mageplaza\Productslider\Block\CategoryId" name="home.slider.verduras" template="productslider.phtml">
                <arguments>
                    <argument name="loop" xsi:type="string">1</argument>
                    <argument name="category_id" xsi:type="string">5</argument>
                    <argument name="products_count" xsi:type="string">8</argument>
                    <argument name="heading" xsi:type="string">Category Id</argument>
                    <argument name="description" xsi:type="string">Verduras em destaque</argument>
                </arguments>
            </block>

            <block class="Mageplaza\Productslider\Block\CategoryId" name="home.slider.legumes" template="productslider.phtml">
                <arguments>
                    <argument name="loop" xsi:type="string">1</argument>
                    <argument name="category_id" xsi:type="string">3</argument>
                    <argument name="products_count" xsi:type="string">8</argument>
                    <argument name="heading" xsi:type="string">Category Id</argument>
                    <argument name="description" xsi:type="string">Legumes em destaque</argument>
                </arguments>
            </block>
        </referenceContainer>

        <referenceContainer name="page.bottom.container">
            <container name="basketsWrapper" htmlTag="div">
                <block class="Magento\Framework\View\Element\Template" name="baskets" template="Magento_Theme::baskets.phtml" />
            </container>
        </referenceContainer>

        <referenceContainer name="footer">
            <block class="Magento\Newsletter\Block\Subscribe" name="newsletter.index.footer" template="Magento_Newsletter::subscribe.phtml" />
        </referenceContainer>
    </body>
</page>
